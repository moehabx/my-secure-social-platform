<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= post.title %></title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1 class="text-3xl font-bold mb-4"><%= post.title %></h1>
        <div class="flex items-center mb-2">
            <img src="<%= post.profilePicture || '/default-profile.png' %>" alt="Author Profile Picture" class="profile-pic w-10 h-10 mr-2">
            <p class="text-gray-700">Posted by: <%= post.username %></p>
        </div>
        <p class="text-gray-600 text-sm mb-2">Created on: <%= formatDate(post.createdDate) %></p>
        <div class="text-gray-800 mb-4"><%- filterUserHTML(post.body) %></div>
        <% if (post.image) { %>
            <img src="<%= post.image %>" alt="Post Image" class="post-image mb-4">
        <% } %>
        <div class="flex items-center space-x-4 mb-4">
            <form action="/<%= post.hasLiked ? 'unlike' : 'like' %>/<%= post.id %>" method="POST">
                <button type="submit" class="like-button <%= post.hasLiked ? 'liked' : '' %>">
                    <svg fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                    </svg>
                    <%= post.likeCount %> <%= post.likeCount === 1 ? 'Like' : 'Likes' %>
                </button>
            </form>
            <a href="#comments" class="comment-button">
                <svg fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 14H6l-2 2V4h16v12z"/>
                </svg>
                <%= post.commentCount %> <%= post.commentCount === 1 ? 'Comment' : 'Comments' %>
            </a>
        </div>
        <% if (isAuthor) { %>
            <div class="flex space-x-2 mb-4">
                <a href="/edit-post/<%= post.id %>" class="btn btn-primary">Edit Post</a>
                <form action="/delete-post/<%= post.id %>" method="POST">
                    <button type="submit" class="btn btn-danger">Delete Post</button>
                </form>
            </div>
        <% } %>
        <% if (isAdmin) { %>
            <form action="/delete-post/<%= post.id %>" method="POST" class="mb-4">
                <button type="submit" class="btn btn-danger">Delete Post (Admin)</button>
            </form>
        <% } %>

        <h2 id="comments" class="text-2xl font-semibold mb-2">Comments</h2>
        <% if (errors && errors.length) { %>
            <ul class="error">
                <% errors.forEach(error => { %>
                    <li><%= error %></li>
                <% }) %>
            </ul>
        <% } %>
        <form action="/comment/<%= post.id %>" method="POST" class="mb-4">
            <textarea name="content" class="w-full p-2 border rounded" rows="3" placeholder="Add a comment..."></textarea>
            <button type="submit" class="btn btn-primary mt-2">Post Comment</button>
        </form>

        <% if (comments.length === 0) { %>
            <p class="text-gray-600">No comments yet.</p>
        <% } else { %>
            <% comments.forEach(comment => { %>
                <div class="post-card mb-2">
                    <div class="flex items-center mb-2">
                        <img src="<%= comment.profilePicture || '/default-profile.png' %>" alt="Commenter Profile Picture" class="profile-pic w-8 h-8 mr-2">
                        <p class="text-gray-700"><%= comment.username %> â€¢ <%= formatDate(comment.createdDate) %></p>
                    </div>
                    <p class="text-gray-800"><%= comment.content %></p>
                    <% if (comment.userId === user.userid || user.isAdmin) { %>
                        <form action="/delete-comment/<%= comment.id %>" method="POST" class="mt-2">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    <% } %>
                </div>
            <% }) %>
        <% } %>

        <a href="/" class="text-blue-500 hover:underline">Back to Dashboard</a>
    </div>
</body>
</html>