<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1 class="text-3xl font-bold mb-4">Dashboard</h1>
        <div class="flex items-center mb-4">
            <img src="<%= user.profilePicture || '/default-profile.png' %>" alt="Profile Picture" class="profile-pic w-12 h-12 mr-2">
            <p class="text-lg">Welcome, <%= user.username %>!</p>
        </div>
        <nav class="flex space-x-4 mb-4">
            <a href="/profile" class="btn btn-primary">Edit Profile</a>
            <a href="/my-posts" class="btn btn-primary">My Posts</a>
            <a href="/create-post" class="btn btn-primary">Create Post</a>
            <a href="/chat" class="btn btn-primary">Chat</a>
            <a href="/logout" class="btn btn-danger">Logout</a>
            <% if (user.isAdmin) { %>
                <a href="/admin-dashboard" class="btn btn-primary">Admin Dashboard</a>
            <% } %>
        </nav>

        <h2 class="text-2xl font-semibold mb-2">All Posts</h2>
        <% if (posts.length === 0) { %>
            <p class="text-gray-600">No posts available.</p>
        <% } else { %>
            <% posts.forEach(post => { %>
                <div class="post-card">
                    <div class="flex items-center mb-2">
                        <img src="<%= post.profilePicture || '/default-profile.png' %>" alt="Author Profile Picture" class="profile-pic w-10 h-10 mr-2">
                        <p class="text-gray-700">Posted by: <%= post.username %></p>
                    </div>
                    <h3 class="text-xl font-semibold"><a href="/post/<%= post.id %>"><%= post.title %></a></h3>
                    <p class="text-gray-600 text-sm mb-2">Created on: <%= formatDate(post.createdDate) %></p>
                    <div class="text-gray-800 mb-2"><%- filterUserHTML(post.body) %></div>
                    <% if (post.image) { %>
                        <img src="<%= post.image %>" alt="Post Image" class="post-image">
                    <% } %>
                    <div class="flex items-center space-x-4 mt-2">
                        <form action="/<%= post.hasLiked ? 'unlike' : 'like' %>/<%= post.id %>" method="POST">
                            <button type="submit" class="like-button <%= post.hasLiked ? 'liked' : '' %>">
                                <svg fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                                </svg>
                                <%= post.likeCount %> <%= post.likeCount === 1 ? 'Like' : 'Likes' %>
                            </button>
                        </form>
                        <a href="/post/<%= post.id %>" class="comment-button">
                            <svg fill="currentColor" viewBox="0 0 24 24">
                                <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 14H6l-2 2V4h16v12z"/>
                            </svg>
                            <%= post.commentCount %> <%= post.commentCount === 1 ? 'Comment' : 'Comments' %>
                        </a>
                    </div>
                </div>
            <% }) %>
        <% } %>
    </div>
</body>
</html>